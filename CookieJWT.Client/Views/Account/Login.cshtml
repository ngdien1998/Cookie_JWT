@model UserAccountViewModel
@{ 
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div style="margin:auto;width:500px;padding:16px;margin-top:24px;" class="card">
        @Html.ValidationSummary()
        <form style="margin:0;" asp-action="@nameof(AccountController.Login)" asp-controller="@(ControllerName.Of<AccountController>())" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" asp-for="Email" id="email" aria-describedby="emailHelp" placeholder="Enter email" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" asp-for="Password" id="password" placeholder="Password" />
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="rememberLogin" asp-for="RememberLogin">
                <label class="form-check-label" for="rememberLogin">Remember login for me</label>
            </div>
            <button type="submit" class="btn btn-primary">Login now</button>
        </form>
    </div>
</body>
</html>